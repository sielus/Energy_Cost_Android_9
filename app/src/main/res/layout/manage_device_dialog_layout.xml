<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/AppBackGroudColor"
    android:visibility="visible">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDeviceNameLayout"
        android:layout_width="346dp"
        android:layout_height="72dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:autoSizeTextType="uniform"
        android:hint="Nazwa Urządzenia"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:counterTextAppearance="@style/CounterOverFlow"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDeviceName"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890óęążźć"
            android:inputType="text"
            android:maxLength="30"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDevicePowerLayout"
        android:layout_width="175dp"
        android:layout_height="73dp"

        android:layout_marginTop="7dp"
        android:layout_marginBottom="1dp"

        android:autoSizeTextType="uniform"
        android:hint="Moc urządzenia (W)"

        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:counterEnabled="true"
        app:counterMaxLength="8"
        app:counterTextAppearance="@style/CounterOverFlow"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/text_field_inputeditTextDeviceNumbersLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_field_inputeditTextDeviceNameLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDevicePower"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:maxLength="8"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDeviceNumbersLayout"
        android:layout_width="176dp"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="9dp"
        android:autoSizeTextType="uniform"
        android:hint="Ilość urządzeń"

        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:counterEnabled="true"
        app:counterMaxLength="3"
        app:counterTextAppearance="@style/CounterOverFlow"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_field_inputeditTextDevicePowerLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDeviceNumbers"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:maxLength="3"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonDialogAccept"
        android:layout_width="61dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:text="ok"
        android:fontFamily="@font/lato_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/buttonTimePicker"

        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lato_light"
        android:text="Czas pracy"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toEndOf="@+id/text_field_inputeditTextDevicePowerLayout"
        app:layout_constraintTop_toBottomOf="@+id/text_field_inputeditTextDeviceNameLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>