<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/AppBackGroudColor"
    android:visibility="visible">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDeviceNameLayout"

        android:layout_width="349dp"
        android:layout_height="61dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"


        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:hint="Nazwa Urządzenia"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDeviceName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="30"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDevicePowerLayout"

        android:layout_width="191dp"
        android:layout_height="64dp"

        android:layout_marginStart="10dp"
        android:hint="Moc urządzenia (W)"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"

        app:counterEnabled="true"
        app:counterMaxLength="8"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="8"

            android:id="@+id/editTextDevicePower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDeviceNumbersLayout"

        android:layout_width="148dp"
        android:layout_height="68dp"
        app:counterEnabled="true"
        app:counterMaxLength="3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:hint="Ilość urządzeń"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_field_inputeditTextDevicePowerLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="3"

            android:id="@+id/editTextDeviceNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDeviceWorkHLayout"

        android:layout_width="122dp"
        android:layout_height="70dp"
        app:counterEnabled="true"
        app:counterMaxLength="2"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="24dp"
        android:hint="Czas pracy H"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_field_inputeditTextDeviceWorkMLayout"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="2"

            android:id="@+id/editTextDeviceWorkH"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="numberSigned"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_inputeditTextDeviceWorkMLayout"

        android:layout_width="125dp"
        android:layout_height="70dp"
        app:counterEnabled="true"
        app:counterMaxLength="2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="24dp"
        android:hint="Czas pracy M"
        android:textColorHint="#FFFFFF"
        app:boxBackgroundMode="outline"
        app:errorEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDialogAccept"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/text_field_inputeditTextDeviceWorkHLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="2"

            android:id="@+id/editTextDeviceWorkM"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="numberSigned"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonDialogAccept"
        android:layout_width="61dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:text="ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815" />


</androidx.constraintlayout.widget.ConstraintLayout>