<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"

    tools:context=".ui.Roomlist.RoomListFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"

        android:gravity="center">


        <TextView
            android:id="@+id/testTextView1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="24sp"

            />

        <TextView
            android:id="@+id/testTextView2"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:text="TextView"

            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/editbuttonRow"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#5BFF00"
            android:drawableTop="@drawable/ic_edit_black_24dp"
            app:icon="@drawable/ic_edit_black_24dp" />

        <Button
            android:id="@+id/deletebuttonRow"
            android:layout_width="51dp"
            android:layout_height="match_parent"

            android:backgroundTint="#FF0000"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            app:icon="@drawable/ic_delete_black_24dp" />

    </LinearLayout>
</LinearLayout>