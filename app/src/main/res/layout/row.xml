<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".ui.Roomlist.RoomListFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/testTextView1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textColor="#0C0404"
            android:textSize="24sp"

            />

        <TextView
            android:id="@+id/testTextView2"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:text="TextView"

            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/editbuttonRow"
            android:layout_width="64dp"
            android:layout_marginLeft="10dp"
            android:layout_height="47dp"
            android:drawableTop="@drawable/ic_edit_black_24dp" />

        <Button
            android:id="@+id/deletebuttonRow"
            android:layout_width="64dp"
            android:layout_height="47dp"


            android:drawableTop="@drawable/ic_delete_black_24dp" />

    </LinearLayout>
</LinearLayout>